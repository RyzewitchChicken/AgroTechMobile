<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientData">


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backopacity" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="21dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/borderer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/login" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:lineSpacingMultiplier="1.3"
            android:text="AGRICULTOR"
            android:textColor="#FF008F39"
            android:textSize="20sp" />


        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_style"
            android:lineSpacingMultiplier="1.3"
            android:text="DNI : 76373301 "
            android:textColor="#FF000000"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginBottom="40dp"
            android:lineSpacingMultiplier="1.3"
            android:text="JUAN CARLOS GOMEZ "
            android:textColor="#FF000000"
            android:textSize="26.67sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="100dp"
            android:lineSpacingMultiplier="1.3"
            android:text="CORREO: jcago@agrotech.com.pe "
            android:textColor="#FF000000"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="148dp"
            android:layout_height="126dp"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="80dp"
            app:srcCompat="@drawable/agrotech" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:lineSpacingMultiplier="0.27"
            android:text="Back"
            android:textColor="#FF008F39"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/clientedit"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            app:srcCompat="@drawable/lapiz" />

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="3dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            app:cardBackgroundColor="#008F39" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="12dp"
            android:layout_height="22dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/raster" />



    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>